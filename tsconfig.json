{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "target": "es2019",                     
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "tests"],
  // "include": [
  //   "src/**/*.ts"
  // ]
}
